<div class="container">
  <div class="row justify-content-center">
    <div class="form">
        <div class="form-title">
         <h1>Create a new event</h1>
        </div>

        <div class="form-questions">
          <%= simple_form_for [@city, @event] do |f| %>
          <%= f.input :name %>
          <%= f.input :location %>
          <%= f.input :description %>
          <%= f.input :category %>
          <%= f.button :submit, class: "btn btn-flat banner-button"  %>
          </div>
        <% end %>
    </div>
  </div>
</div>
