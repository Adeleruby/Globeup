<div class="auth-container">
  <div class="row justify-content-center">
    <div class="form">
        <div class="form-title">
         <h1>Create a new event</h1>
        </div>

        <div class="form-questions">
          <%= simple_form_for [@city, @event] do |f| %>
          <%= f.input :name %>
          <%= f.input :location %>
          <%= f.input :starts %>
          <%= f.input :ends %>
          <%= f.input :description %>
          <%= f.input :category %>
          <%= f.input :photo %>
            <div class= "row justify-content-center">
            <%= f.button :submit, class: "btnpink"  %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
