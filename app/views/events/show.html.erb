<%= cl_image_tag @event.photo, height: 400, width: 600, crop: :fill %>
<div>
  <h2> <%= @event.name %> </h2>
  <strong> Details </strong>
  <p>Venue: <%= @event.location.capitalize %></p>
  <p> <%= @event.description %> </p>
  <p><%= @event.category %></p>
  <p> Starts at <%= @event.starts.strftime("%I:%M%p") %> </p>
  <p> Ends at <%= @event.ends.strftime("%I:%M%p") %> </p>
  <p>Organized by <%= @event.owner.first_name %></p>
  <%= link_to user_path(@event.owner) do %>
    <%= cl_image_tag @event.owner.profile_pic, class: "large-avatar-square" %>
  <% end %>
</div>
<div>
  <p> Members in attendance </p>
  <% @attendees.each do |person| %>
    <div class="user-photo">
      <%= link_to user_path(person) do %>
        <%= cl_image_tag person.user.profile_pic, class: "small-avatar-square" %>
      <% end %>
    </div>
  <% end %>
  <% unless @event.owner == current_user %>
    <%= link_to "Register for this event!", event_attendees_path(@event), class: "create-btn", :method => :post %>
    <% end %>

</div>

<br>
<br>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
<div class="d-flex justify-content-around">

  <% if @event.owner == current_user %>
    <%= link_to "Edit your event", edit_event_path(@event), class: "btn btn-flat banner-button" %>

  <%= link_to "Delete your event", event_path(@event), class: "btn btn-flat banner-button", :method => :delete %>


  <% end %>
</div>

