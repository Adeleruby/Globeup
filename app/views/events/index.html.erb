<div class="banner-content">
  <div class="text-center">
    <br>
    <br>
  <%= link_to "Add an event", new_city_event_path, class: "btn btn-flat banner-button", id: "addevent" %>
  </div>
</div>

<div class="cards-container">
  <% @events.each do |yo| %>
    <%= link_to event_path(yo) do %>
      <div class="card">
        <%#= cl_image_tag yo.photo, height: 266, width: 300, crop: :fill %>
        <div class="card-info">
          <div>
            <h2><%= yo.name %></h2>
            <p><%= yo.location %></p>
            <p><%= yo.description %></p>
            <p><%= yo.category %></p>
          </div>
          <%= cl_image_tag yo.user.profile_pic, class: "avatar-bordered user", height: 60, width: 60, crop: :fill %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
