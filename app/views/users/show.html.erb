<div class="text-center">
  <br>
  <br>
  <h1 style="color: #464655;"> <%=@user.first_name.capitalize%> <%=@user.last_name.capitalize%></h1>
</div>
<br>
<br>
<div class="text-center">
<div class="cards-container">
    <%= link_to user_path(@user) do %>
      <div class="card">
        <%= cl_image_tag @user.profile_pic, height: 266, width: 300, crop: :fill %>
        <%= cl_image_tag @user.cover_photo, height: 266, width: 300, crop: :fill %>
        <div class="card-info">
          <div>
            <h2><%= @user.first_name %></h2>
            <h2><%= @user.last_name %></h2>
            <p><%= @user.current_location_id %></p>
            <p><%= @user.from_id %></p>
            <p><%= @user.moving_to_id %></p>
          </div>
          <%= cl_image_tag @user.profile_pic, class: "avatar-bordered", height: 60, width: 60, crop: :fill %>
        </div>
      </div>
    <% end %>
</div>

