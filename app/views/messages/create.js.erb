<% if @message.errors.any? %>
  // handle validation errors later
<% else %>

  messagesContainer = document.querySelector("#chat-element-<%= @chat_room.id %>");
  messagesContainer.insertAdjacentHTML('beforeend', '<%= j render "message", message: @message, user_is_messages_author: true %>');
  input = document.querySelector('#message_content');
  input.value = '';
  input.blur();
  scrollLastMessageIntoView();
<% end %>
