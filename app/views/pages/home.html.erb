<div class="maincontainer">
  <div class="maintext">
    <h1>Women connecting with women across the world</h1>
    <h3>Welcome to GlobeUp, a community space for women to find their tribe anywhere in the world</h3>
    <div class="maincontainerbtns">
      <%= link_to "GlobeUp", about_path, class:"btnpurple" %>
      <%= link_to "Sign Up", new_user_registration_path, class:"btntransparent" %>
    </div>
  </div>

    <div class="mainimage">
      <%= image_tag('mainphoto.png', alt: 'GlobeUp Girls')%>
    </div>
</div>


<div class= "citiescont">
  <h2>Cities</h2>
    <div class="slick-carousel">
    <% @cities.each do |city| %>
      <div class="inner">
      <%= link_to city_path(city) do %>
        <div class="citycard" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= cl_image_path city.card_photo %>)";>
        <h2><%= city.name %></h2>
        </div>
        <% end %>
      </div>
    <% end %>
    </div>
</div>



<div class="reviewscont">
  <div class="whitebox">
    <div class="whiteboximg">
      <%= image_tag('girls.jpg', alt: 'Hugging Girls')%>
    </div>
    <div class="whiteboxtext">
       <div class="mb-wrap mb-style-2">
